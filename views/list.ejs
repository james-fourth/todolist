<%- include("partials/header.ejs") -%>
  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>
  <div class="box">
    <% newListItems.forEach(function(listItem) { %>
    <form class="item" action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= listItem._id %>" onChange="this.form.submit()">
        <p><%= listItem.name %></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>"></input>
    </form>


    <% }) %>
    <form action="/" method="post" class="item">
      <input type="text" name="newItem" placeholder="New Item" autofocus autocomplete="off">
      <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
  </div>
<%- include("partials/footer.ejs") -%>
